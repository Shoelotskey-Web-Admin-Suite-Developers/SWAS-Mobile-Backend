{
  "compilerOptions": {
    "rootDir": "src",                // ðŸ‘ˆ all source files live inside src/
    "outDir": "dist",                // ðŸ‘ˆ compiled JS will go here
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],         // ðŸ‘ˆ only look at TS files in src/
  "exclude": ["node_modules", "dist"]
}
